@model IEnumerable<CategoryArchiveVM>

@{
    ViewData["Title"] = "Category Archive";
}


<div class="container mt-5">
    <h2 class="text-center">Archive Categories</h2>
    <div class="card">
        <div class="header">
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Created date </th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="category-data">
                            <td>@item.CategoryName</td>
                            <td>@item.CreatedDate</td>
                            
                            <td>
                                <form class="d-inline" method="post" asp-controller="Category" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button>
                                </form>
                                <a class="btn btn-secondary text-white btn-sm add-archive" data-id="@item.Id">Restore</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>


@section js {
    <script src="~/admin/assets/js/archive.js"></script>
}


